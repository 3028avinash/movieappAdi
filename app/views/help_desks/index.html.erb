<%
=begin%>
 <p style="color: green"><%= notice %></p>

<h1>Help desks</h1>

<div id="help_desks">
  <% @help_desks.each do |help_desk| %>
    <%= render help_desk %>
    <p>
      <%= link_to "Show this help desk", help_desk %>
    </p>
  <% end %>
</div>

<%= link_to "New help desk", new_help_desk_path %>

 
<%
=end%>



<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Contents</h2>
        <p style="text-align: end;">New help_desk = <%= @help_desks.count %> <%#= today_contents_count %></p>
      </div>
      <div class="form-group">
        <%= form_tag('/help_desks', :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], class: 'form-control', :required => true, placeholder: 'Which content/category/genre/language/releaseyear you are looking for?' %>          
        <% end %>        
      </div>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Question</th>            
            <th>Answer</th>            
            <th>Action</th>            
            <!-- <th>DateTime</th>             -->
          </tr>
        </thead>
        <tbody>
         <% @help_desks.each do |help_desk| %>
          <tr>
            <td><%= help_desk.try(:id) %></td>            
            <td><%= help_desk.try(:question) %></td>
            <td><%= help_desk.try(:answer) %></td>
            <td><%= link_to "Edit", edit_help_desk_path(help_desk), style: "font-size:15px;color:rgb(6, 52, 6)" %></td>
          </tr>
         <% end %>
        </tbody>        
      </table>  
      <br>
      <%= link_to 'New help_desk', new_help_desk_path %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>