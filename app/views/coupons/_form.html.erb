<%= form_with(model: coupon) do |form| %>
  <% if coupon.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coupon.errors.count, "error") %> prohibited this coupon from being saved:</h2>

      <ul>
        <% coupon.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Basic Form Elements
      </div>
      <div class="panel-body">
        <div class="row">
            <div class="form-group">
              <label>Code</label>
              <%= form.text_field :code, class: "form-control", placeholder: "Enter title", :required => true %>
            </div>
            <div class="form-group">
              <label>Offer</label>
              <%= form.text_field :offer, class: "form-control", placeholder: "Enter category" %>
            </div>
            <div class="form-group">
              <label>Status</label>
              <%= form.select :status, options_for_select([['Active', true], ['Inactive', false]], selected: form.object.status),{}, {class: 'form-control'} %>
            </div>  
            <div class="form-group"> 
              <button type="submit" class="btn btn-primary">Submit Record</button>
              <button type="reset" class="btn btn-default">Reset Form</button>     
            </div>    
          <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<% end %>


