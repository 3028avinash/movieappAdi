<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Coupons</h2>
        <p style="text-align: end;">New Coupons = <%= @coupons.count %> <%#= today_coupons_count %></p>
      </div>
      <div class="form-group">
        <%= form_tag('/coupons', :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], class: 'form-control', :required => true, placeholder: 'Which genre/category/content you are looking for?' %>          
        <% end %>        
      </div>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Code</th>            
            <th>Offer</th>
            <th>Status</th>                       
            <th>Action</th>                       
            <!-- <th>DateTime</th>             -->
          </tr>
        </thead>
        <tbody>
         <% @coupons.each do |trans| %>
          <tr>
            <td><%= trans.try(:id) %></td>            
            <td><%= trans.try(:code) %></td>
            <td><%= trans.try(:offer) %></td>
            <td>
              <% if trans.status == true %>
                <i class="fa fa-check" style="font-size:15px;color:green"></i>
              <% else %>
                <i class="fa fa-close" style="font-size:15px;color:red"></i>
              <% end %>
            </td>
            <td><%= link_to "Edit", edit_coupon_path(trans), style: "font-size:15px;color:rgb(6, 52, 6)" %></td>
            <!-- <td><%= trans.try(:created_at).strftime("%d/%m/%Y %I:%M%p")  %></td> -->
          </tr>
         <% end %>
        </tbody>        
      </table>  
      <br>
      <%= link_to 'New Coupon', new_coupon_path %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>