<%= form_with(model: content) do |form| %>
  <% if content.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Basic Form Elements
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label>Title</label>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter title", :required => true %>
            </div>
            <div class="form-group">
              <label>Category</label>
              <!-- <%= form.text_field :category, class: "form-control", placeholder: "Enter category" %> -->
              <%= form.select :category, options_for_select([['Web Series', "web-series"], ['Movies', "movies"]], selected: form.object.category),{}, {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <label>Release Year</label>
              <%= form.text_field :release_date, class: "form-control", placeholder: "Enter release date" %>
            </div>
            <div class="form-group">
              <label>Language</label>
              <%= form.text_field :language, class: "form-control", placeholder: "Enter language" %>
            </div>
            <div class="form-group">
              <label>Status</label>
              <%= form.select :status, options_for_select([['Active', true], ['Inactive', false]], selected: form.object.status),{}, {class: 'form-control'} %>
            </div>  
            <div class="form-group"> 
              <button type="submit" class="btn btn-primary">Submit Record</button>
              <button type="reset" class="btn btn-default">Reset Form</button>     
            </div>    
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label>Thumbnail</label>
              <%= form.text_field :banner, class: "form-control", placeholder: "Enter thumbnail", :required => true %>
            </div>
            <div class="form-group">
              <label>Genre</label>
              <%= form.text_field :genre, class: "form-control", placeholder: "Enter genre", :required => true %>
            </div>
            <div class="form-group">
              <label>Trailer Link</label>
              <%= form.text_field :trailer_link, class: "form-control", placeholder: "Enter trailer link" %>
            </div>
            <div class="form-group">
              <label>Vip Status</label>
              <%= form.select :vip_status, options_for_select([['Active', true], ['Inactive', false]], selected: form.object.status),{}, {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <label>Is Slider</label>
              <%= form.select :is_slider, options_for_select([['Active', true], ['Inactive', false]], selected: form.object.status),{}, {class: 'form-control'} %>
            </div>
            
          </div>          
          <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<% end %>

