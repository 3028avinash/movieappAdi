<%= form_with(model: episode) do |form| %>
  <% if episode.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(episode.errors.count, "error") %> prohibited this episode from being saved:</h2>

      <ul>
        <% episode.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Basic Form Elements
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <div class="form-group">
                <label>ContentID</label>
                <!-- <%= form.text_field :content_id, class: "form-control", placeholder: "Enter content_id", :required => true %> -->
                <%= form.collection_select :content_id, Content.all, :id, :title, { prompt: 'Select Content' }, class: "form-control form-control-sm" %>
              </div>
              <div class="form-group">
                <label>Season</label>
                <%= form.text_field :season, class: "form-control", placeholder: "Enter season" %>
              </div>
              <div class="form-group">
                <label>Video</label>
                <%= form.file_field :file, class: "form-control"%>
              </div>
              <div class="form-group">
                <label>Thumbnail</label>
                <%= form.text_field :thumbnail, class: "form-control", placeholder: "Enter thumbnail" %>
              </div>
              
              <div class="form-group">
                <label>Title</label>
                <%= form.text_field :title, class: "form-control", placeholder: "Enter title", :required => true %>
              </div>
              <div class="form-group">
                <label>Runtime</label>
                <%= form.text_field :runtime, class: "form-control", placeholder: "Enter runtime", :required => true %>
              </div>
              <div class="form-group">
                <label>Cast</label>
                <%= form.text_area :cast, class: "form-control", placeholder: "Enter cast" %>
              </div>
              <div class="form-group">
                <label>Director</label>
                <%= form.text_field :director, class: "form-control", placeholder: "Enter director" %>
              </div>
              <div class="form-group">
                <label>Story</label>
                <%= form.text_area :story, class: "form-control", placeholder: "Enter story" %>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label>Status</label>
                  <%= form.select :status, options_for_select([['Active', true], ['Inactive', false]], selected: form.object.status),{}, {class: 'form-control'} %>
                </div>  
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label>Vip Status</label> 
                  <%= form.select :vip_status, options_for_select([['Active', true], ['Inactive', false]], selected: form.object.status),{}, {class: 'form-control'} %>
                </div>
              </div>
              <div class="form-group"> 
                <button type="submit" class="btn btn-primary">Submit Record</button>
                <button type="reset" class="btn btn-default">Reset Form</button>     
              </div>   
            </div>          
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% end %>
