<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Subscriptions</h2>
        <p style="text-align: end;">New Subscriptions = <%= @subscriptions.count %> <%#= today_subscriptions_count %></p>
      </div>
      <div class="form-group">
        <%= form_tag('/subscriptions', :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], class: 'form-control', :required => true, placeholder: 'Which genre/category/content you are looking for?' %>          
        <% end %>        
      </div>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Name</th>            
            <th>Real Amount</th>
            <th>Offer Amount</th>            
            <th>Duration</th>            
            <th>Action</th>            
          </tr>
        </thead>
        <tbody>
         <% @subscriptions.each do |subs| %>
          <tr>
            <td><%= subs.try(:id) %></td>            
            <td><%= subs.try(:name) %></td>
            <td><%= subs.try(:real_amount) %></td>
            <td><%= subs.try(:offer_amount) %></td>
            <td><%= subs.try(:duration) %></td>
            <td><%= link_to "Edit", edit_subscription_path(subs), style: "font-size:15px;color:rgb(6, 52, 6)" %></td>
          </tr>
         <% end %>
        </tbody>        
      </table>  
      <br>
      <%= link_to 'New Subscription', new_subscription_path %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>