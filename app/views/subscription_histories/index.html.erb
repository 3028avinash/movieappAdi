<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Subscriptions</h2>
        <p style="text-align: end;">New Subscriptions = <%= @subscription_histories.count %> <%#= today_subscriptions_count %></p>
      </div>
      <div class="form-group">
        <%= form_tag('/subscription_histories', :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], class: 'form-control', :required => true, placeholder: 'Which userId/subscriptionId/couponId you are looking for?' %>          
        <% end %>        
      </div>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>#ID</th>
            <th>User ID</th>            
            <th>Subscription ID</th>
            <th>Start Date</th>            
            <th>End date</th>            
            <th>Coupon ID</th>                    
          </tr>
        </thead>
        <tbody>
         <% @subscription_histories.each do |subs| %>
          <tr>
            <td><%= subs.try(:id) %></td>            
            <td><%= link_to "#{subs.user_id}", "/users/#{subs.user_id}" %></td>
            <td><%= link_to "#{subs.subscription_id}", "/subscriptions/#{subs.subscription_id}" %></td>
            <td><%= subs.try(:subscription_start) %></td>
            <td><%= subs.try(:subscription_end) %></td>
            <td><%= subs.try(:coupon_end) %></td>
          </tr>
         <% end %>
        </tbody>        
      </table>  
      <br>
      <!-- <%= link_to 'New Subscription', new_subscription_history_path %> -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>